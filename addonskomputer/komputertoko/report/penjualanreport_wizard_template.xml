<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="report_penjualanreport_pdf" name="Template Name">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2><b> FAKTUR PENJUALAN INTERNAL </b></h2>
                    <div class="row">
                        <div class="col-4">Nama    :</div>
                        <div class="col-8">
                            <t t-esc="form['konsumen_id'][1]"/>
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    <span>Nota Pembelian</span>
                                </th>
                                <th>
                                    <span t-esc="form['konsumen_id'][1]"/>
                                </th>
                            </tr>
                        </thead>
                        <thead>
                            <tr>
                                <th>
                                    <span>Nota Pembelian</span>
                                </th>
                                <th>
                                    <span>Tanggal Pembelian</span>
                                </th>
                                <th>
                                    <span>Total Pembayaran</span>
                                </th>
                            </tr>
                        </thead>
                        <t t-foreach="penjualanxx" t-as="line">
                             <tr>
                                <td>
                                    <span t-esc="line['name']"/>
                                </td>
                                <td>
                                    <span t-esc="line['tgl_penjualan']"/>
                                </td>
                                <td>
                                    <span t-esc="line['total_bayar']"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>